-- FullScript
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local StarterGui = game.Players.LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("StarterGui")
local playerScripts = game.Players.LocalPlayer:WaitForChild("PlayerScripts")

-- Create UI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AdjustReachGui"
screenGui.Parent = StarterGui

local textButton = Instance.new("TextButton")
textButton.Size = UDim2.new(0, 200, 0, 50)
textButton.Position = UDim2.new(0.5, -100, 0.9, -75)
textButton.Text = "Adjust Reach (1-8)"
textButton.TextColor3 = Color3.new(1, 1, 1)
textButton.BackgroundColor3 = Color3.new(0.5, 0, 0.5) -- Purple color
textButton.Parent = screenGui

-- Create LocalScript for UI
local localScript = Instance.new("LocalScript")
localScript.Name = "AdjustReachScript"
localScript.Parent = playerScripts

local textButton = screenGui:WaitForChild("TextButton")

textButton.MouseButton1Click:Connect(function()
    local reachValue = tonumber(prompt("Enter Reach Value (1-8):") or "")
    if reachValue and reachValue >= 1 and reachValue <= 8 then
        game.ReplicatedStorage.AdjustReachEvent:FireServer(reachValue)
    else
        warn("Invalid reach value. Please enter a number between 1 and 8.")
    end
end)

-- Create Server Script
local remoteEvent = Instance.new("RemoteEvent")
remoteEvent.Name = "AdjustReachEvent"
remoteEvent.Parent = ReplicatedStorage

local function onAdjustReach(player, reachValue)
    reachValue = math.clamp(reachValue, 1, 8)
    print(player.Name .. " adjusted reach to " .. reachValue)
    player.Character:WaitForChild("Humanoid").WalkSpeed = 16 + (reachValue * 2)
end

remoteEvent.OnServerEvent:Connect(onAdjustReach)
